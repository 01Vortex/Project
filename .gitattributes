# 强制指定常见代码文件的语言类型
*.vue linguist-language=Vue
*.js linguist-language=JavaScript
*.ts linguist-language=TypeScript
*.java linguist-language=Java
*.css linguist-language=CSS
*.html linguist-language=HTML
*.json linguist-language=JSON

# 排除构建产物或大文件（避免干扰统计）
/dist/ linguist-ignore=true
/build/ linguist-ignore=true
/target/ linguist-ignore=true
/node_modules/ linguist-ignore=true
/public/ linguist-ignore=true
/assets/ linguist-ignore=true
/static/ linguist-ignore=true

# 忽略日志、压缩包等非源码文件
*.log linguist-ignore=true
*.gz linguist-ignore=true
*.zip linguist-ignore=true
*.jar linguist-ignore=true
*.war linguist-ignore=true

# 避免混淆的模板文件
*.ejs linguist-detectable=false
*.j2 linguist-detectable=false

# 指定各子目录的语言主导
Like-System/**/* linguist-language=Vue
Message-Push/**/* linguist-language=Java
WeBlog/**/* linguist-language=Vue
